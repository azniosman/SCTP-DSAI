Table students {
  id int [pk, increment]
  name varchar
  address varchar
  phone varchar
  email varchar
  class_id int
}

Table teachers {
  id int [pk, increment]
  name varchar
  address varchar
  phone varchar
  email varchar
}

Table class {
  id int [pk, increment]
  name varchar
}

Table class_teachers {
  class_id int
  teacher_id int
  
  indexes {
    (class_id, teacher_id) [pk]
  }
}

Ref: students.class_id > class.id // many-to-one
Ref: class_teachers.class_id > class.id // many-to-one
Ref: class_teachers.teacher_id > teachers.id // many-to-one